// Fonction pour g√©rer les requ√™tes OPTIONS (CORS preflight)
function doOptions(e) {
  return ContentService.createTextOutput("")
    .setMimeType(ContentService.MimeType.TEXT);
}

// Fonction GET optimis√©e pour tester l'API
function doGet(e) {
  try {
    var startTime = new Date().getTime();
    
    // Test de connectivit√© optimis√©
    if (!testConnection()) {
      return createErrorResponse("Erreur de connexion", "CONNECTION_ERROR");
    }
    
    var executionTime = new Date().getTime() - startTime;
    
    var response = {
      status: "success",
      message: "API optimis√©e fonctionne correctement",
      timestamp: new Date().toISOString(),
      version: "4.0",
      fields: {
        total: 21,
        original: 13,
        new: 8,
        newFields: [
          "Dipl√¥m√©(e)",
          "Niveau d'√©tude", 
          "Autre niveau pr√©cision",
          "Domaines de comp√©tence",
          "Autre comp√©tence pr√©cision",
          "Recherche d'emploi",
          "Formations d'int√©r√™t",
          "Autre formation pr√©cision"
        ]
      },
      performance: {
        optimized: true,
        executionTime: executionTime + "ms",
        features: [
          "Validation rapide",
          "D√©tection de doublons optimis√©e", 
          "Gestion d'erreurs performante",
          "Logs optimis√©s",
          "Appels API r√©duits",
          "Nouveaux champs √©ducatifs et professionnels",
          "Validation des champs conditionnels",
          "Sanitization am√©lior√©e"
        ]
      }
    };
    
    return ContentService.createTextOutput(JSON.stringify(response))
      .setMimeType(ContentService.MimeType.JSON);
      
  } catch (error) {
    return createErrorResponse("Erreur interne du serveur", "INTERNAL_ERROR");
  }
}